{
  "name": "@orchestrate-solutions/universal-ci",
  "version": "1.2.2",
  "description": "Configuration-driven CI/CD that works everywhere - one script, zero dependencies",
  "main": "run-ci.sh",
  "bin": {
    "run-ci": "./bin/cli.js",
    "universal-ci": "./bin/cli.js"
  },
  "files": [
    "run-ci.sh",
    "install-ci.sh",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "./run-ci.sh --config universal-ci.config.json",
    "ci": "./run-ci.sh --stage test && ./run-ci.sh --stage release"
  },
  "keywords": [
    "ci",
    "cd",
    "cicd",
